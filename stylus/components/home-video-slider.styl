.video
    padding-top 60px
    padding-bottom 10px
    background-size: cover;
    background-repeat: no-repeat;
    #home-video-slider
        .slick-dots
            display: flex;
            justify-content: center;
            margin: 0;
            padding: 2rem 0;
            list-style-type: none;
            position: relative
            bottom: 0px;
            li
                margin: 0 0.25rem;
            button
                display: block;
                width: 10px;
                height: 10px;
                padding: 0;
                border: 1px solid #fff;
                border-radius: 100%;
                text-indent: -9999px;
            li.slick-active button
                background-color: #fff;
        .video__item
            padding 0 15px
            .video__img
                width 100%
                height 277px
                background-repeat: no-repeat;
                background-size: contain;
                background-position: center;
            .video__content
                padding-top 40px