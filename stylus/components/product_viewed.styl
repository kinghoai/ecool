.product-viewed
    border-top 1px solid #797b7e
    padding-top 30px
    margin-top 20px
    .product-section-title
        font-size 16px
        text-align: center
        text-transform: uppercase
    .product-viewed__item
        background-color #ffffff
        padding 30px
        .item-product__image
            padding-bottom 10px
        .item-product__detail
            font-size 10px
            padding-top 10px
            text-align center
            .item-product__price,h3
                font-size 10px
@media (min-width: 992px)
    .product-viewed
        margin-bottom: 40px
        border-top 1px solid #797b7e
        padding-top 50px
        .product-viewed__item
            padding 50px
        .product-section-title
            font-size 26px
            text-align: center
            text-transform: uppercase
            margin-bottom 20px
            margin-top 20px