@media (min-width: 320px)
    .subscribe
        padding 46px 0
        .subscribe__form
            display flex
            justify-content space-between
            .subscribe__input
                height 44px
                width calc(100% - 96px)
                padding-left 10px
                border none
                background-color #F2F2F2
                &::placeholder
                    color #B3B3B3
            .subscribe__submit
                padding 6px 15px
                line-height 20px
                background-color #30BCEE
                border none
                font-size 17px
                font-weight 600
                width 142px
    .menu.bg-blue
        padding-top 25px
        padding-bottom 45px
    .item-footer
        padding 4px
    .menu__title
        margin-bottom 20px;
    .social.text-center
        padding-top 30px
        padding-bottom 30px
    .copyright__info
        padding-bottom 20px
        padding-left: 15px
        padding-right: 15px
    .language
        width 20px
        height 11px
        padding 9px 0 0px
        display inline-block
        margin-right 10px
    .social__icon
        width 26px
        margin-right 15px
    .sologan-footer
        padding-top 25px
    .language-footer
        float right
        .search
            padding 0
            margin 10px
            width: 20px;
    #search-footer
        width 0
        position absolute
        z-index 10
        height 40px
        right 45px
        top 0px
        transition ease 0.5s
        display flex
        input
            width 0
            border-radius 0
            border 0
            padding 0
            &:focus
                outline none
        button
            width 0
            background transparent
            padding 0
            border 0
            position relative
            right 30px
    #search-footer.show-search-footer
        width 300px
        position absolute
        z-index 10
        height 40px
        right 45px
        top 0px
        transition ease 0.5s
        display flex
        input
            width 100%
            border-radius 20px
            border 1px solid #a4a7ab
            padding 2px 15px
            &:focus
                outline none
        button
            width 20px
            background transparent
            padding 0
            border 0
            position relative
            right 30px
@media(min-width:992px)
    .subscribe
        padding 106px 0
        .subscribe__form
            display flex
            justify-content space-between
            .subscribe__input
                height 44px
                width calc(100% - 170px)
                padding-left 30px
    .menu.bg-blue
        padding-top 55px
        padding-bottom 55px
    .menu__title
        margin-bottom 25px;
    .social.text-center
        padding-top 62px
        padding-bottom 62px
    .social__icon
        width 36px
        margin-right 24px
    .copyright__info
        padding-bottom 50px
    .language
        width 20px
        height 11px
        padding 9px 0 0px
        display inline-block
        margin-right 10px
    .search
        width 20px
        padding 52px 0 33px
        margin 0 20px 0 35px
    .language-footer
        float right
    .sologan-footer
        padding-top 45px

