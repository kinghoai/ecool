@media (min-width: 320px)
    header
        margin-bottom 10px
        .navbar
            padding 10px 0 0
            .navbar-brand
                max-height 100%
                max-width 131px
            .navbar-nav
                display flex
                .nav-item
                    padding 0
                    margin 0 auto
                    a
                        font-size 12px
                        line-height 14.4px
                        color #000000
                        padding 12px 17px
                        display inline-block
                        border-bottom 4px solid #ffffff
                        &:hover
                            border-bottom 4px solid #30BCEE
                            text-decoration none
                .active
                    a
                        border-bottom 4px solid #30BCEE
                        text-decoration none
            .search
                width 20px
                padding 0 0 20px 0
                margin 0 auto
                display block
            .language
                width 20px
                margin 0 auto
@media (min-width: 992px)
    header
        margin-bottom 0px
        border-bottom 1px solid #808080
        .navbar
            padding 10px 0 0
            .navbar-brand
                max-height 100%
                max-width 131px
            .navbar-nav
                display flex
                .nav-item
                    padding 0
                    a
                        font-size 12px
                        line-height 14.4px
                        color #000000
                        padding 52px 17px 33px
                        &:hover
                            border-bottom 4px solid #30BCEE
                            text-decoration none
            .search
                width 20px
                padding 52px 0 33px
                margin 0 20px 0 35px
            .language
                width 20px
                padding 9px 0 0px
                display inline-block
