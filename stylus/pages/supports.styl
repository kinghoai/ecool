.page-support
    .banner
        background-repeat: no-repeat
        padding 10px
        background-size: cover;
        color #fff
        .banner__content
            width: 100%
            max-width 473px
            h3
                font-size 38px
            .input-group
                width 320px
            span
                font-size 10px
            span.text-white-50.font-italic
                text-decoration underline
    .item-info-support
          border-bottom 1px solid grey
    .arrowdown
        width 7px
        margin-left 7px
    .lime-border
        position relative
        &::placeholder
            font-size 10px
            font-weight 300
            padding-left 15px
    .question-form
        height 35px
        width 100%
        max-width 318px
        position relative
        button
            background transparent
            position absolute
            right 10px
            top 50%
            transform translateY(-60%)
            height 20px
            width 20px
            padding 0
            img
                max-width 100%
                max-height 100%
    .support-portfolio
        width 100%
        margin 0 auto
        padding 20px 0
        border-bottom 1px solid #000000
    .support-banner
        padding 60px 0 60px 85px
        background-size cover
        background-position right
        max-width 976px
        margin 0 auto
@media (min-width 992px)
    .page-support
        .banner
            padding 70px
        .support-portfolio
            max-width 300px
            padding 45px 0
    .item-contact-support
        border-right 1px solid #414042


