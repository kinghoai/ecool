.ecool-video
    .video-header
        margin-top 30px
        margin-bottom 20px
        padding-bottom 50px
    .video-header-title
        margin-top 20px
        font-weight bold
    .arrow
        display: inline-block;
        position: absolute;
        bottom: -20px;
        left: 15px;
    .video-items
        .item-video
            margin-bottom 30px
            h4
                margin-bottom 20px
                margin-top 0
                height 34px
                line-height 17px
                text-overflow hidden
    .img-item-video
        margin-bottom 10px
@media(min-width 992px)
    .ecool-video
        .video-header
            margin-top 55px
            margin-bottom 55px
        .img-video
            width 545px
            height 308px
        .video-header-title
            margin-top 45px
            font-weight bold
        .arrow__left
            width 7px
            padding 5px 11px
            border 1px solid #000
            border-top-left-radius: 6px
            border-bottom-left-radius: 6px
            opacity 0.4
        .arrow__right
            width 7px
            padding 5px 11px
            border 1px solid #000
            border-left: none
            border-top-right-radius: 6px
            border-bottom-right-radius: 6px
            opacity 0.4
        .arrow
            display inline-block
            position absolute
            bottom 0
            left 15px
        .video-items-title
            font-weight bold
            margin-bottom 50px
        .video-items
            margin-bottom 50px
        .img-item-video
            margin-bottom 20px

        .item-video
            border 1px solid #f7f8fa
