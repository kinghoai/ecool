extends ../layouts/main.pug


block content
    .contact
        .container
            nav(aria-label='breadcrumb').fs-10.font-weight-light
                ol.breadcrumb
                    li.breadcrumb-item
                        a(href='/home.html') Home
                    li.breadcrumb-item.active(aria-current='page')
                        a(href='#') Liên hệ
            h1.text-center.fs-20.fs-lg-55.font-weight-bold.mt-5.mb-4 Liên hệ eCool
            .row
                .col-12.company-info.text-center
                    h3.fs-16.font-weight-semi-bold.text-uppercase CÔNG TY CỔ PHẦN QUỐC TẾ SƠN HÀ
                    p.fs-12.font-weight-light.mb-0 Lô CN1, Cụm công nghiệp Từ Liêm, P. Minh Khai, Q. Bắc Từ Liêm, Hà Nội
                    span.fs-9.font-weight-light.mr-5.mb-5
                        img(src='/images/iconmail-07.png')
                        span   support@ecool.com.vn
                    span.fs-9.font-weight-light.mb-5
                        img(src='/images/iconphone-07.png')
                        span    1800.6566
                .col-12.pt-4
                    p.text-center __________________
            form.form-contact.text-center(action="#")
                .row
                    .col-lg-8.col-12.form_left
                        input.form-group.border-form-contact.form-control(type='text', placeholder='Họ tên')
                        input.form-group.border-form-contact.form-control(type='phone', placeholder='Số điện thoại')
                        input.form-group.border-form-contact.form-control(type='email', placeholder='Email')
                        textarea.form-group.border-textarea-contact.form-control(row='28', placeholder='Nội dung liên hệ')
                        button.btn.btn-contact(type='button') GỬI LIÊN HỆ
                    .col-lg-4.col-12.form_right
                        .item-contact.text-center
                            p.fs-12.font-weight-semi-bold.name-item-contact
                                | HỆ THỐNG ĐẠI LÍ
                                br
                                | ECOOL
                            a.text-sky.fs-9(href="#") Chi tiết
                        .item-contact
                            p.fs-12.font-weight-semi-bold.name-item-contact CHÍNH SÁCH BẢO HÀNH ĐIỀU HÒA ECOOL
                            a.text-sky.fs-9(href="#") Chi tiết
                        .item-contact
                            p.text-center.fs-12.font-weight-semi-bold.name-item-contact
                                | HOTLINE 24/7
                                br
                                | 0966.666.999
                            a.text-sky.fs-9(href="#") Chi tiết
        #map
block scripts
    script(src="/js/my_map.js")
    script(async, defer, src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBevBjEKvEBR9dUzHvOP7TrW9niqq1IMo0&callback=initMap')
