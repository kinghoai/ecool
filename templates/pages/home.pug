extends ../layouts/main.pug


block content
    section.slider
        .slider__item
            img(src='images/slider1.png')
            .container
                .text-center.slider__description
                    h2.text-white.fs-28 Điều hòa inverter
                    p.text-white.fs-17 Tiết kiệm điện tuyệt đối với Điều hòa wifi Ecool Điều khiển bằng app tiện dụng
                    a.text-white.see-more Xem thêm
    section.portfolio
        .container.container--924
            h2.text-center.fs-24.font-weight-normal Mang thiên nhiên đến ngôi nhà bạn
            .row
                .col-4
                    .portfolio__item
                        img(src='images/portfolio.jpg')
                        p.text-white.fs-19 Công nghệ hiện đại
                .col-4
                    .portfolio__item
                        img(src='images/portfolio2.png')
                        p.text-white.fs-19 Bền bỉ êm ái
                .col-4
                    .portfolio__item
                        img(src='images/portfolio3.png')
                        p.text-white.fs-19 Thuận theo thiên nhiên
    section.product-tab
        .container.container--998
            ul.nav.justify-content-center(role='tablist')
                li.nav-item
                    a.nav-link.text-black.fs-16.font-weight-medium.text-uppercase.active(data-toggle='pill', href='#pills-1', role='tab', aria-controls='pills-1', aria-selected='true') Điều hòa inverter
                li.nav-item
                    a.nav-link.text-black.fs-16.font-weight-medium.text-uppercase(data-toggle='pill', href='#pills-2', role='tab', aria-controls='pills-2', aria-selected='false') Profile
                li.nav-item
                    a.nav-link.text-black.fs-16.font-weight-medium.text-uppercase(data-toggle='pill', href='#pills-3', role='tab', aria-controls='pills-3', aria-selected='false') Contact
                li.nav-item
                    a.nav-link.text-black.fs-16.font-weight-medium.text-uppercase(data-toggle='pill', href='#pills-4', role='tab', aria-controls='pills-4', aria-selected='false') Contact
                #pills-tabContent.tab-content
                    #pills-1.tab-pane.show.active(role='tabpanel', aria-labelledby='pills-home-tab') 
                        .container.container--998
                            .row

                    #pills-2.tab-pane(role='tabpanel', aria-labelledby='pills-profile-tab') 2
                    #pills-3.tab-pane(role='tabpanel', aria-labelledby='pills-contact-tab') 3
                    #pills-4.tab-pane(role='tabpanel', aria-labelledby='pills-contact-tab') 4


